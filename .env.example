# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_V1_PREFIX=/api/v1

# Environment
ENVIRONMENT=development

# Runtime configuration
UVICORN_WORKERS=1
UVICORN_RELOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Cloud Storage Configuration
CLOUD_BUCKET_NAME=views-data
CLOUD_BUCKET_REGION=eu-north-1
CLOUD_DATA_PREFIX=api_ready/
# Temporary demo credentials with read-only access to the public bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Optional API Authentication
API_KEY=your-local-api-key

# Data Configuration
DATA_PATH=data/views_parquet/2025/07
USE_LOCAL_DATA=true
DATA_BACKEND=database
DATABASE_URL=sqlite:///data/forecasts.db

# Data loading toggles (used by docker-entrypoint)
AUTO_LOAD_DATA=true
RESET_DB_ON_START=false
SKIP_DB_IF_EXISTS=true

# Logging
LOG_LEVEL=INFO
